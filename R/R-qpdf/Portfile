R.setup             cran ropensci qpdf 1.4.0
revision            0
categories-append   print
maintainers         nomaintainer
license             Apache-2
description         Split, combine and compress PDF files
long_description    {*}${description}
homepage            https://docs.ropensci.org/qpdf
checksums           rmd160  75834c53677208a8a8b0b39560d99ac39c69029b \
                    sha256  2b476f75e6ff56eaa125cef250a9e6885204492e1ab30e352c136dfa02a0aeef \
                    size    556933

depends_lib-append  path:include/turbojpeg.h:libjpeg-turbo \
                    port:R-askpass \
                    port:R-curl \
                    port:R-Rcpp

if {[string match *gcc* ${configure.compiler}] && ${configure.build_arch} in [list arm i386 ppc]} {
    post-patch {
        reinplace "s|-ljpeg -lz|-ljpeg -lz -latomic|" ${worksrcpath}/src/Makevars
    }
}

depends_test-append port:R-testthat

test.run            yes
