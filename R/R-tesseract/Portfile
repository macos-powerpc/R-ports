PortSystem          1.0
PortGroup           R 1.0

# GitHub version lags behind.
R.setup             cran ropensci tesseract 5.2.3
revision            0
categories-append   textproc
maintainers         nomaintainer
license             Apache-2
description         Open Source OCR Engine
long_description    {*}${description}
checksums           rmd160  3ca27d948754260308b7e9fb6adc13c8fa2be3cf \
                    sha256  68dbe5d67f68c4cd01fe60e0ffc6515d3fb7a0ea79c27b4c96b46388c35e2ea0 \
                    size    461559

depends_build-append \
                    path:bin/pkg-config:pkgconfig

depends_lib-append  port:R-curl \
                    port:R-digest \
                    port:R-pdftools \
                    port:R-rappdirs \
                    port:R-Rcpp \
                    port:tesseract

if {${os.platform} eq "darwin" && ${configure.cxx_stdlib} ne "libc++"} {
    patchfiles-append \
                    patch-cxx11.diff
}

# While the package can be installed without any languages in tesseract share folder,
# there is an error message at load time. So let us add some.
depends_run-append  port:tesseract-chi-tra \
                    port:tesseract-deu \
                    port:tesseract-eng \
                    port:tesseract-fra \
                    port:tesseract-heb \
                    port:tesseract-jav \
                    port:tesseract-kor \
                    port:tesseract-rus \
                    port:tesseract-san \
                    port:tesseract-spa

depends_test-append port:R-knitr \
                    port:R-magick \
                    port:R-rmarkdown \
                    port:R-spelling \
                    port:R-tibble

test.run            yes
