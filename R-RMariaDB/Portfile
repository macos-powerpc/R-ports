PortSystem          1.0
PortGroup           R 1.0

R.setup             github r-dbi RMariaDB 1.3.5 v
revision            0
categories-append   databases
maintainers         nomaintainer
license             MIT
description         Database interface and MariaDB driver
long_description    {*}${description}
homepage            https://rmariadb.r-dbi.org
checksums           rmd160  d2e80d559f61142e6b1fb374c62120f75d840cd5 \
                    sha256  c1e4b37bf19bb2809eb5271db422cfb3ccf2ff0a85de844172c9cbac77952352 \
                    size    921989
github.tarball_from archive

set mariadb_ver     10.11

depends_build-append \
                    path:bin/pkg-config:pkgconfig

depends_lib-append  port:mariadb-${mariadb_ver} \
                    port:R-bit64 \
                    port:R-blob \
                    port:R-cpp11 \
                    port:R-DBI \
                    port:R-hms \
                    port:R-lubridate \
                    port:R-plogr \
                    port:R-rlang

build.args-append   --configure-vars="INCLUDE_DIR=${prefix}/include/mariadb-${mariadb_ver}/mysql \
                        LIB_DIR=${prefix}/lib/mariadb-${mariadb_ver}/mysql"

depends_test-append port:R-DBItest \
                    port:R-decor \
                    port:R-readr \
                    port:R-rprojroot \
                    port:R-testthat \
                    port:R-withr

test.run            no
