                    port:R-future.apply \
                    port:R-lavaan \
                    port:R-loo \
                    port:R-mnormt \
                    port:R-nonnest2 \
                    port:R-Rcpp \
                    port:R-RcppEigen \
                    port:R-RcppParallel \
                    port:R-rstan \
                    port:R-rstantools \
                    port:R-StanHeaders \
                    port:R-tmvnsim

